                        <div class="single-sidebar-widget ads-widget">
                            <a href="#"><img class="img-fluid" src="~/Content/Images/area_rw/Ad-adidas.jpg" @*width="300" height="250"*@ alt=""></a>
                        </div>
                        <div class="single-sidebar-widget ads-widget">
                            <a href="#"><img class="img-fluid" src="~/Content/plugins/personal/img/blog/ads-banner.jpg" alt=""></a>
                        </div>
                    </div>

                </div>
            </div>

