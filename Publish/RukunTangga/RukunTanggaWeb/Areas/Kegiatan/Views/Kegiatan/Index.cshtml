@model List<AbidzarFrame.Master.Interface.Dto.JenisKegiatanResult>
@using AbidzarFrame.Web.Helpers

@{
    ViewBag.Title = "Kegiatan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Layout/css/about.css" rel="stylesheet" />
<style>
    .overflow-ellipsis {
        width: 100px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>

<div class="row margin-bottom-20">
    @{
        for (int i = 0; i < Model.Count(); i++)
        {
            <a href="@Url.Action("DetailJenisKegiatan", "Kegiatan", new { area = "Kegiatan", idJenisKegiatan = Model[i].Id })">
                <div class="col-md-2 col-md-2 col-xs-6">
                    <div class="portlet light" style="background-image: url('../Content/Images/bg/card-islamic-1.jpg'); 
                    background-repeat:no-repeat; background-size: 100% 100%;">
                        <div class="card-icon">
                            @Html.Raw(Labels.CardIcon(i))
                        </div>
                        <div class="card-title">
                            <span>@Model[i].JenisKegiatan</span>
                        </div>
                        @*<div>
                            <span style="color: #373d43">@Model[i].Deskripsi</span>
                        </div>*@
                    </div>
                </div>
            </a>
        }
    }
</div>

<script>
    $(function () {
        hideLoading();
    })

</script>