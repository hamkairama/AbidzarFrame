@model AbidzarFrame.Master.Interface.Dto.DetailJenisKegiatanResult
@{
    Layout = null;
}

@Html.AntiForgeryToken()
@Html.Hidden("hiddenActionGrid", (object)ViewBag.ActionGrid)

@Styles.Render("~/AbidzarFrame/bundles/bootstrap-datepicker3/css")
@Scripts.Render("~/AbidzarFrame/bundles/bootstrap-datepicker/js")

<form id="FormObject">
    <fieldset>
        <div class="col-md-12">
            @{
                if ((object)ViewBag.ActionGrid == "Edit")
                {
                    <div class="row hidden">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @style = "width:100%", @maxlength = "50" })
                        </div>
                    </div>
                }
            }
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.IdJenisKegiatan)
                    @Html.DropDownListFor(m => m.IdJenisKegiatan, new SelectList(ViewBag.JenisKegiatanList, "Value", "Text"), "", new { @class = "selectpicker show-tick form-control" })
                    @Html.ValidationMessageFor(m => m.IdJenisKegiatan, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NamaKegiatan)
                    @Html.TextBoxFor(m => m.NamaKegiatan, new { @class = "form-control", @style = "width:100%", @maxlength = "100" })
                    @Html.ValidationMessageFor(m => m.NamaKegiatan, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Lokasi)
                    @Html.TextBoxFor(m => m.Lokasi, new { @class = "form-control", @style = "width:100%", @maxlength = "100" })
                    @Html.ValidationMessageFor(m => m.Lokasi, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Deskripsi)
                    @Html.TextAreaFor(m => m.Deskripsi, new { @class = "form-control", @style = "width:100%", @maxlength = "500" })
                    @Html.ValidationMessageFor(m => m.Deskripsi, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.TanggalKegiatan)
                    <div class="input-group date date-picker" data-date="" data-date-format="dd-mm-yyyy" data-date-viewmode="years" style="width:100%">
                        @Html.TextBoxFor(m => m.TanggalKegiatan, "{0:dd-MM-yyyy}", new { @class = "form-control", @style = "width:100%", @readonly = "readonly" })
                        <span class="input-group-btn">
                            <button class="btn default" type="button" id="btnCalendar"><i class="fa fa-calendar"></i></button>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.TanggalKegiatan, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.WarnaLatar)
                    @Html.DropDownListFor(m => m.WarnaLatar, new SelectList(ViewBag.WarnaList, "Value", "Text"), "", new { @class = "selectpicker show-tick form-control" })
                </div>
            </div>
        </div>

    </fieldset>
</form>

<script>
    $(document).ready(function () {
        jQuery.validator.methods["date"] = function (value, element) {
            return true;
        }

        $(".date-picker").datepicker({
            dateFormat: 'dd-mm-yyyy',
            changeYear: true,
            showButtonPanel: true,
        });

        //Reference : https://silviomoreto.github.io/bootstrap-select/options/
        $('.selectpicker').selectpicker({
            liveSearch: true,
            size: 5,
            showSubtext: true
        });

        if (/Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent)) {
            $('.selectpicker').selectpicker('mobile');
        }
    })   
</script>

