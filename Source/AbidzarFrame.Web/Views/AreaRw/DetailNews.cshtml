    Layout = "~/Views/Shared/_LayoutAreaRw.cshtml";
    ViewBag.Title = "Personal";
}
<style>
    .overflow {
        height: 106px;
        overflow: hidden;
        text-overflow: "---";
    }
</style>
<div class="whole-wrap">
    <div class="container">
        <div class="section-top-border">

            <div class="row">
