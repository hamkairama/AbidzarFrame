@model AbidzarFrame.Master.Interface.Dto.KotaResult
@{
    Layout = null;
}

@Html.AntiForgeryToken()
@Html.Hidden("hiddenActionGrid", (object)ViewBag.ActionGrid)

<form id="FormObject">
    <fieldset>
        <div class="col-md-12">
            @{
                if ((object)ViewBag.ActionGrid == "Edit")
                {
                    <div class="row hidden">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @style = "width:100%", @maxlength = "50" })
                        </div>
                    </div>
                }
            }

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.IdProvinsi)
                    @Html.DropDownListFor(m => m.IdProvinsi, (IEnumerable<SelectListItem>)ViewBag.ProvinsiList, "Select :", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.IdProvinsi, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.KodeKota)
                    @Html.TextBoxFor(m => m.KodeKota, new { @class = "form-control", @style = "width:100%", @maxlength = "50" })
                    @Html.ValidationMessageFor(m => m.KodeKota, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.NamaKota)
                    @Html.TextBoxFor(m => m.NamaKota, new { @class = "form-control", @style = "width:100%", @maxlength = "50" })
                    @Html.ValidationMessageFor(m => m.NamaKota, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </fieldset>
</form>

