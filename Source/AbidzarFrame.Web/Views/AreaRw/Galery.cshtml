@model List<AbidzarFrame.Master.Interface.Dto.DokumentasiDetailJenisKegiatanResult>
@using AbidzarFrame.Web.Helpers

@{
    Layout = "~/Views/Shared/_LayoutAreaRw.cshtml";
    ViewBag.Title = "Personal";
}
<section class="portfolio-area section-gap" id="portfolio">
    <div class="container">
        <div class="filters">
            <ul>
                <li class="active" data-filter="*">All</li>
                @if (Model.Count > 0)
                {
                    foreach (var item in Model.Select(x=>x.NamaKegiatan).Distinct())
                    {
                        string namaFilter = "." + item.Replace(" ", "");
                        <li data-filter="@namaFilter">@item</li>
                    }
                }
                <li data-filter=".vector">Vector</li>
                <li data-filter=".raster">Raster</li>
                <li data-filter=".ui">UI/UX</li>
                <li data-filter=".printing">Printing</li>
            </ul>
        </div>

        <div class="filters-content">
            <div class="row grid">
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="single-portfolio col-sm-4 all @Model[0].NamaKegiatan.Replace(" ", "")">
                            <div class="relative">
                                <div class="thumb">
                                    <div class="overlay overlay-bg"></div>
                                    <img class="image img-fluid" src="@item.NamaFile" alt="">
                                </div>
                                <a href="@item.NamaFile" class="img-pop-up">
                                    <div class="middle">
                                        <div class="text align-self-center d-flex"><img src="~/Content/plugins/personal/img/preview.png" alt=""></div>
                                    </div>
                                </a>
                            </div>
                            <div class="p-inner">
                                @*<h4>2D Vinyl Design</h4>*@
                                <div class="cat">@item.NamaKegiatan</div>
                            </div>
                        </div>

                    }
                }
                <div class="single-portfolio col-sm-4 all vector">
                    <div class="relative">
                        <div class="thumb">
                            <div class="overlay overlay-bg"></div>
                            <img class="image img-fluid" src="~/Content/plugins/personal/img/p1.jpg" alt="">
                        </div>
                        <a href="~/Content/plugins/personal/img/p1.jpg" class="img-pop-up">
                            <div class="middle">
                                <div class="text align-self-center d-flex"><img src="~/Content/plugins/personal/img/preview.png" alt=""></div>
                            </div>
                        </a>
                    </div>
                    <div class="p-inner">
                        <h4>2D Vinyl Design</h4>
                        <div class="cat">vector</div>
                    </div>
                </div>
                <div class="single-portfolio col-sm-4 all raster">
                    <div class="relative">
                        <div class="thumb">
                            <div class="overlay overlay-bg"></div>
                            <img class="image img-fluid" src="~/Content/plugins/personal/img/p2.jpg" alt="">
                        </div>
                        <a href="~/Content/plugins/personal/img/p2.jpg" class="img-pop-up">
                            <div class="middle">
                                <div class="text align-self-center d-flex"><img src="~/Content/plugins/personal/img/preview.png" alt=""></div>
                            </div>
                        </a>
                    </div>
                    <div class="p-inner">
                        <h4>2D Vinyl Design</h4>
                        <div class="cat">vector</div>
                    </div>
                </div>
                <div class="single-portfolio col-sm-4 all ui">
                    <div class="relative">
                        <div class="thumb">
                            <div class="overlay overlay-bg"></div>
                            <img class="image img-fluid" src="~/Content/plugins/personal/img/p3.jpg" alt="">
                        </div>
                        <a href="~/Content/plugins/personal/img/p3.jpg" class="img-pop-up">
                            <div class="middle">
                                <div class="text align-self-center d-flex"><img src="~/Content/plugins/personal/img/preview.png" alt=""></div>
                            </div>
                        </a>

                    </div>
                    <div class="p-inner">
                        <h4>Creative Poster Design</h4>
                        <div class="cat">Agency</div>
                    </div>
                </div>
                <div class="single-portfolio col-sm-4 all printing">
                    <div class="relative">
                        <div class="thumb">
                            <div class="overlay overlay-bg"></div>
                            <img class="image img-fluid" src="~/Content/plugins/personal/img/p4.jpg" alt="">
                        </div>
                        <a href="~/Content/plugins/personal/img/p4.jpg" class="img-pop-up">
                            <div class="middle">
                                <div class="text align-self-center d-flex"><img src="~/Content/plugins/personal/img/preview.png" alt=""></div>
                            </div>
                        </a>
                    </div>
                    <div class="p-inner">
                        <h4>Embosed Logo Design</h4>
                        <div class="cat">Portal</div>
                    </div>
                </div>
                <div class="single-portfolio col-sm-4 all vector">
                    <div class="relative">
                        <div class="thumb">
                            <div class="overlay overlay-bg"></div>
                            <img class="image img-fluid" src="~/Content/plugins/personal/img/p5.jpg" alt="">
                        </div>
                        <a href="~/Content/plugins/personal/img/p5.jpg" class="img-pop-up">
                            <div class="middle">
                                <div class="text align-self-center d-flex"><img src="~/Content/plugins/personal/img/preview.png" alt=""></div>
                            </div>
                        </a>
                    </div>
                    <div class="p-inner">
                        <h4>3D Helmet Design</h4>
                        <div class="cat">vector</div>
                    </div>
                </div>
                <div class="single-portfolio col-sm-4 all raster">
                    <div class="relative">
                        <div class="thumb">
                            <div class="overlay overlay-bg"></div>
                            <img class="image img-fluid" src="~/Content/plugins/personal/img/p6.jpg" alt="">
                        </div>
                        <a href="~/Content/plugins/personal/img/p6.jpg" class="img-pop-up">
                            <div class="middle">
                                <div class="text align-self-center d-flex"><img src="~/Content/plugins/personal/img/preview.png" alt=""></div>
                            </div>
                        </a>
                    </div>
                    <div class="p-inner">
                        <h4>2D Vinyl Design</h4>
                        <div class="cat">raster</div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
